<%- include("include/head.ejs") %>

<body class="bg-light">
  <div class="container mt-5">
    <div class="card shadow-sm p-4">
      <h1 class="text-center mb-4">Welcome to Uschat @<%= data.name %>'s Page</h1>

      <div class="text-center mb-3">
        <button class="btn btn-primary me-2" id="likeBtn">
          <i class="fas fa-thumbs-up"></i> Like
        </button>
        <button class="btn btn-danger" id="subscribeBtn">
          <i class="fas fa-bell"></i> Subscribe
        </button>
      </div>

      <p class="text-center fw-bold text-muted">People you may know</p>

      <div class="text-center mb-4">
        <span class="me-4">Followers: <strong><%= data.followers %></strong></span>
        <span>Following: <strong><%= data.following %></strong></span>
      </div>

      <hr />

      <div class="row g-4">
  <% for (let post of data.posts) { %>
    <div class="col-md-4">
      <div class="card">
        <img
          src="<%= post.image || '/assets/images/default.jpg' %>"
          class="card-img-top"
          alt="Post image"
          style="height: 250px; object-fit: cover;"
        />
        <div class="card-body">
          <p class="card-text">
            <i class="fas fa-heart text-danger"></i> <%= post.likes %> Likes
            &nbsp;&nbsp;&nbsp;
            <i class="fas fa-comment text-primary"></i> <%= post.comments %> Comments
          </p>
        </div>
      </div>
    </div>
  <% } %>
</div>

    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Inline Script to Handle Button Clicks -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const buttons = document.querySelectorAll("button");
      for (let btn of buttons) {
        btn.addEventListener("click", () => {
          alert(`${btn.textContent.trim()} button is clicked`);
        });
      }
    });
  </script>
  <%- include("include/footer.ejs") %>
</body>
</html>


